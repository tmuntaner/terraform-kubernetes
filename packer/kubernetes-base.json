{
    "variables": {
        "aws_access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
        "aws_secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}",
        "region": "eu-central-1"
    },
    "builders": [
        {
            "access_key": "{{user `aws_access_key`}}",
            "ami_name": "leap-42-3-kubernetes-base",
            "instance_type": "t2.micro",
            "force_delete_snapshot": true,
            "force_deregister": true,
            "region": "eu-central-1",
            "secret_key": "{{user `aws_secret_key`}}",
            "source_ami_filter": {
                "filters": {
                    "virtualization-type": "hvm",
                    "name": "openSUSE-Leap-42.3-*-hvm-ssd-x86_64-*",
                    "root-device-type": "ebs"
                },
                "owners": [
                    "679593333241"
                ],
                "most_recent": true
            },
            "ssh_username": "ec2-user",
            "type": "amazon-ebs"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
            "inline": [
                "zypper --no-gpg-checks ref",
                "zypper --no-gpg-checks --non-interactive up",
                "zypper --non-interactive rm containerd docker-img-store-setup docker-libnetwork docker-runc"
            ]
        }
    ]
}