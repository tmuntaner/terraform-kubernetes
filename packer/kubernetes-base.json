{
  "builders": [
    {
      "type": "openstack",
      "ssh_username": "opensuse",
      "image_name": "kubernetes-base",
      "source_image_name": "openSUSE-Leap-42.3-OpenStack.x86_64",
      "flavor": "m1.small",
      "floating_ip_pool": "floating",
      "networks": ["897dd8d9-0ba3-4fb1-a94b-8e6c8f4274b5"]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "zypper --no-gpg-checks ref",
        "zypper --no-gpg-checks --non-interactive up",
        "zypper --non-interactive rm containerd docker-img-store-setup docker-libnetwork docker-runc"
      ]
    }
  ]
}
