{
  "builders": [
    {
      "type": "openstack",
      "ssh_username": "opensuse",
      "image_name": "kubernetes-controller",
      "source_image_name": "kubernetes-base",
      "flavor": "m1.small",
      "floating_ip_pool": "floating",
      "networks": ["897dd8d9-0ba3-4fb1-a94b-8e6c8f4274b5"]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "kubernetes.default.svc.cluster.local.nginx.conf",
      "destination": "kubernetes.default.svc.cluster.local.conf"
    },
    {
      "type": "shell",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "zypper --no-gpg-checks --non-interactive in nginx",
        "mv kubernetes.default.svc.cluster.local.conf /etc/nginx/vhosts.d/kubernetes.default.svc.cluster.local.conf",
        "mkdir -p /var/lib/kubernetes/",
        "mkdir -p /etc/kubernetes/config",
        "wget -q https://storage.googleapis.com/kubernetes-release/release/v1.11.0/bin/linux/amd64/kube-apiserver",
        "wget -q https://storage.googleapis.com/kubernetes-release/release/v1.11.0/bin/linux/amd64/kube-controller-manager",
        "wget -q https://storage.googleapis.com/kubernetes-release/release/v1.11.0/bin/linux/amd64/kube-scheduler",
        "wget -q https://storage.googleapis.com/kubernetes-release/release/v1.11.0/bin/linux/amd64/kubectl",
        "chmod +x kube-apiserver kube-controller-manager kube-scheduler kubectl",
        "mv kube-apiserver kube-controller-manager kube-scheduler kubectl /usr/local/bin/",
        "systemctl enable nginx"
      ]
    }
  ]
}
