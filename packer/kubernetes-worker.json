{
  "builders": [
    {
      "type": "openstack",
      "ssh_username": "opensuse",
      "image_name": "kubernetes-worker",
      "source_image_name": "kubernetes-base",
      "flavor": "m1.small",
      "floating_ip_pool": "floating",
      "networks": ["897dd8d9-0ba3-4fb1-a94b-8e6c8f4274b5"]
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "execute_command": "sudo -S sh -c '{{ .Vars }} {{ .Path }}'",
      "inline": [
        "echo net.ipv4.ip_forward=1 >> /etc/sysctl.d/50-router.conf",
        "echo net.ipv6.conf.all.disable_ipv6=1 >> /etc/sysctl.d/50-router.conf",
        "zypper --no-gpg-checks --non-interactive in socat conntrack-tools ipset",
        "wget -q https://github.com/kubernetes-incubator/cri-tools/releases/download/v1.11.1/crictl-v1.11.1-linux-amd64.tar.gz",
        "wget -q https://storage.googleapis.com/kubernetes-the-hard-way/runsc",
        "wget -q https://github.com/opencontainers/runc/releases/download/v1.0.0-rc5/runc.amd64",
        "wget -q https://github.com/containernetworking/plugins/releases/download/v0.6.0/cni-plugins-amd64-v0.6.0.tgz",
        "wget -q https://github.com/containerd/containerd/releases/download/v1.1.3/containerd-1.1.3.linux-amd64.tar.gz",
        "wget -q https://storage.googleapis.com/kubernetes-release/release/v1.12.2/bin/linux/amd64/kubectl",
        "wget -q https://storage.googleapis.com/kubernetes-release/release/v1.12.2/bin/linux/amd64/kube-proxy",
        "wget -q https://storage.googleapis.com/kubernetes-release/release/v1.12.2/bin/linux/amd64/kubelet",
        "mkdir -p /etc/cni/net.d /opt/cni/bin /var/lib/kubelet /var/lib/kube-proxy /var/lib/kubernetes /var/run/kubernetes",
        "chmod +x kubectl kube-proxy kubelet runc.amd64 runsc",
        "mv runc.amd64 runc",
        "mv kubectl kube-proxy kubelet runc runsc /usr/local/bin/",
        "tar -xvf crictl-v1.11.1-linux-amd64.tar.gz -C /usr/local/bin/",
        "tar -xvf cni-plugins-amd64-v0.6.0.tgz -C /opt/cni/bin/",
        "tar -xvf containerd-1.1.3.linux-amd64.tar.gz -C /"
      ]
    }
  ]
}
