kind: KubeletConfiguration
apiVersion: kubelet.config.k8s.io/v1beta1
authentication:
  anonymous:
    enabled: false
  webhook:
    enabled: true
  x509:
    clientCAFile: "/var/lib/kubernetes/ca.pem"
authorization:
  mode: Webhook
clusterDomain: "cluster.local"
clusterDNS:
  - "10.32.0.10"
podCIDR: "10.200.{{ worker_index }}.0/24"
runtimeRequestTimeout: "15m"
tlsCertFile: "/var/lib/kubelet/worker-{{ worker_index }}.pem"
tlsPrivateKeyFile: "/var/lib/kubelet/worker-{{ worker_index }}-key.pem"
